#include <tunables/global>

profile n8n_postgres_profile flags=(attach_disconnected,mediate_deleted) {
  #include <abstractions/base>
  #include <abstractions/bash>
  #include <abstractions/consoles>
  #include <abstractions/nameservice>
  #include <abstractions/shells>

  # Network access (use socket types)
  network inet stream,
  network inet6 stream,

  # File system access
  / r,
  /bin/** mr,
  /sbin/** mr,
  /usr/bin/** mx,
  /usr/sbin/** mx,
  /usr/bin/env ix,
  /bin/sh ix,
  /bin/bash ix,
  /bin/dash ix,
  /lib/** mr,
  /lib64/** mr,
  /usr/** mr,
  /etc/** r,
  /dev/null rw,
  /dev/zero r,
  /dev/random r,
  /dev/urandom r,
  /dev/tty rw,
  /dev/pts/** rw,

  # Process and system information
  @{PROC}/*/stat r,
  @{PROC}/*/status r,
  @{PROC}/*/cmdline r,
  @{PROC}/sys/kernel/pid_max r,
  @{PROC}/version r,
  @{PROC}/meminfo r,
  @{PROC}/cpuinfo r,
  @{PROC}/loadavg r,
  @{PROC}/self/** r,
  owner @{PROC}/*/task/*/stat r,
  
  # PostgreSQL specific directories
  /var/lib/postgresql/** rw,
  /var/lib/postgresql/data/** rw,
  /var/run/postgresql/** rw,
  /tmp/** rw,
  /var/tmp/** rw,

  # Docker initialization
  /docker-entrypoint-initdb.d/** r,
  /usr/local/bin/docker-entrypoint.sh ix,
  /docker-entrypoint.sh ix,
  /usr/local/bin/entrypoint.sh ix,
  /usr/local/bin/gosu ix,

  # PostgreSQL binaries and libraries
  /usr/local/bin/postgres ix,
  /usr/local/bin/pg_* ix,
  /usr/local/lib/postgresql/** mr,
  /usr/local/share/postgresql/** r,

  # Secrets access
  /run/secrets/** r,

  # Signal handling and process control
  signal (send,receive) set=(term,int,quit,hup,usr1,usr2),

  # Deny dangerous operations
  deny @{PROC}/sys/kernel/** w,
  deny /sys/module/apparmor/parameters/enabled w,
  deny /dev/mem r,
  deny /dev/kmem r,
  deny mount,
  deny umount,
  deny ptrace,

  # Required capabilities for PostgreSQL
  capability chown,
  capability dac_override,
  capability fowner,
  capability setgid,
  capability setuid,
  capability sys_resource,

  # Deny other capabilities
  deny capability sys_admin,
  deny capability sys_chroot,
  deny capability sys_module,
  deny capability sys_rawio,
  deny capability sys_time,
  deny capability net_admin,
  deny capability net_raw,
}
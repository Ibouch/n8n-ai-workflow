# ==============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and configure your specific values
# DO NOT commit .env file with real credentials to version control

# ==============================================================================
# DOMAIN & PROTOCOL CONFIGURATION
# ==============================================================================

# Your public domain name (without protocol)
N8N_HOST=your-domain.com

# Protocol for external access (http/https)
N8N_PROTOCOL=https

# Base URL for webhooks and external access
WEBHOOK_URL=https://your-domain.com/

# Editor base URL for the N8N interface
N8N_EDITOR_BASE_URL=https://your-domain.com/

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL database name
POSTGRES_DB=n8n

# PostgreSQL database username
POSTGRES_USER=n8n_admin

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# Enable basic authentication for N8N (recommended: true)
N8N_BASIC_AUTH_ACTIVE=true

# Enable secure cookies (set to true for HTTPS)
N8N_SECURE_COOKIE=true

# N8N web interface admin username
N8N_ADMIN_USER=admin

# ==============================================================================
# SMTP CONFIGURATION
# ==============================================================================

SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_USERNAME=your-email@outlook.com
SMTP_FROM=your-email@outlook.com
SMTP_SENDER_NAME=N8N System
ALERT_EMAIL_TO=admin@your-domain.com
SMTP_TLS=true
SMTP_SSL=false

# ==============================================================================
# MONITORING CONFIGURATION (PRODUCTION)
# ==============================================================================

# Grafana root URL for external access
GRAFANA_ROOT_URL=https://monitoring.your-domain.com

# Grafana dashboard admin username
GRAFANA_ADMIN_USER=admin

# ==============================================================================
# FEATURE TOGGLES
# ==============================================================================

# Enable Prometheus metrics collection
N8N_METRICS=true

# Enable N8N version update notifications
N8N_VERSION_NOTIFICATIONS_ENABLED=true

# Disable N8N diagnostics/telemetry
N8N_DIAGNOSTICS_ENABLED=false

# Disable N8N personalization features
N8N_PERSONALIZATION_ENABLED=false

# ==============================================================================
# TIMEZONE CONFIGURATION
# ==============================================================================

# Server and system timezone
GENERIC_TIMEZONE=UTC

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================

# Backup encryption mode (age/gzip/none)
BACKUP_ENCRYPTION_MODE=age

# Use sidecar container for enhanced backup security
BACKUP_USE_SIDECAR=true

# Remote backup storage type (aws/s3/none)
BACKUP_REMOTE_TYPE=none